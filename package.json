{
  "name": "userscript-utilities",
  "version": "0.0.0",
  "description": "Useful tools for developing userscripts",
  "preferGlobal": true,
  "scripts": {
    "test": "mocha test -c --recursive",
    "jsdoc": "rimraf ./jsdoc && jsdoc -r -d ./jsdoc -t ./node_modules/ink-docstrap/template -R README.md -c ./.jsdoc.conf.json ./src",
    "test-watch": "mocha test --recursive -w -R min"
  },
  "bin": {
    "userscript-utils": "./src/cli/userscript-utilities"
  },
  "main": "./src/index.js",
  "keywords": [
    "userscript",
    "utils"
  ],
  "dependencies": {
    "async": "^2.0.0-alpha.0",
    "commander": "^2.9"
  },
  "author": "Alorel <a.molcanovas@gmail.com>",
  "bugs": {
    "url": "https://github.com/Alorel/userscript-utils/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alorel/userscript-utils.git"
  },
  "homepage": "https://github.com/Alorel/userscript-utils#readme",
  "license": "GPL-3.0",
  "devDependencies": {
    "chai": "^3.5",
    "ink-docstrap": "^1.2.1",
    "jsdoc": "^3.4.0",
    "mocha": "^2.5",
    "rimraf": "^2.5.2"
  }
}
